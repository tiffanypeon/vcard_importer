<h1>Listing vcards</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vcards.each do |vcard| %>
      <tr>
        <td><%= link_to 'Show', vcard %></td>
        <td><%= link_to 'Edit', edit_vcard_path(vcard) %></td>
        <td><%= link_to 'Destroy', vcard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vcard', new_vcard_path %>
